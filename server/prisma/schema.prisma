datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Team {
  country   Country? @relation(fields: [countryId])
  countryId String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  league    String?
  matches   Match[]  @relation(name: "local")
  players   Player[]
  updatedAt DateTime @updatedAt
  visitor   Match[]  @relation(name: "MatchVisitorTeamVisitor")
}

model Country {
  code      String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  teams     Team[]
  updatedAt DateTime @updatedAt
}

model Player {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  league    String?
  name      String?
  number    String?
  team      Team?    @relation(fields: [teamId])
  teamId    String?
  updatedAt DateTime @updatedAt
}

model Match {
  createdAt DateTime  @default(now())
  date      DateTime?
  id        String    @id @default(cuid())
  local     Team?     @relation(name: "local", fields: [localId])
  localId   String?
  updatedAt DateTime  @updatedAt
  visitor   Team?     @relation(name: "MatchVisitorTeamVisitor", fields: [visitorId])
  visitorId String?
}